{
    "name": "koum-ui",
    "version": "1.1.1",
    "private": false,
    "main": "dist/index.js",
    "types": "dist/types/index.d.ts",
    "files": [
        "dist",
        "src/**/*.scss"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/types/index.d.ts"
        }
    },
    "dependencies": {
        "@testing-library/dom": "^10.4.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^13.5.0",
        "@types/jest": "^27.5.2",
        "@types/node": "^16.18.126",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-scripts": "5.0.1",
        "web-vitals": "^2.1.4"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "tsc && sass src/style:dist/style && cpy \"src/style/*.css\" \"dist/style\"",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "pretty": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md,mdx}\"",
        "watch:scss": "sass --watch src/style:src/style"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest",
            "plugin:storybook/recommended"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@storybook/addon-docs": "^9.0.17",
        "@storybook/addon-onboarding": "^9.0.17",
        "@storybook/addon-styling-webpack": "^2.0.0",
        "@storybook/preset-create-react-app": "^9.0.17",
        "@storybook/react-webpack5": "^9.0.17",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "cpy-cli": "^5.0.0",
        "eslint-plugin-storybook": "^9.0.17",
        "prettier": "^3.6.2",
        "prop-types": "^15.8.1",
        "sass": "^1.89.2",
        "storybook": "^9.0.17",
        "typescript": "^4.9.5",
        "webpack": "^5.100.2"
    }
}
